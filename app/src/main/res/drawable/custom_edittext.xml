<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Define corner radius for rounded corners -->
    <corners android:radius="8dp"/>

    <!-- Define solid color (white background) -->
    <solid android:color="#FFFFFF"/>

    <!-- Define border color and thickness -->
    <stroke
        android:width="2dp"
        android:color="#000000"/> <!-- Border color is black -->

    <!-- Optional: Add padding if necessary -->
    <padding
        android:left="10dp"
        android:top="10dp"
        android:right="10dp"
        android:bottom="10dp"/>
</shape>

